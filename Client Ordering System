import socket
import math
clientSocket = socket.socket()
host = '192.168.121.11'
port = 8888

print('Waiting for connection')
try:
    clientSocket.connect((host,port))
except socket.error as e:
    print(str(e))
response = clientSocket.recv(2048) #receive 1-order 2-print
print(response.decode())
while True:
    option = input('Option: ')
    clientSocket.send(str.encode(option))
    if (option == '1'):
      list = clientSocket.recv(2048) #receive menu list
      print(list.decode())
      inputList = input('Menu: ')
      clientSocket.send(str.encode(inputList))
      quantity = input('Quantity: ')
      clientSocket.send(str.encode(quantity))
      status = clientSocket.recv(2048)
      print(status.decode())

      print("Your Order: ", inputList)
      print("The Quantity: ", quantity)
#      status = clientSocket.recv(2048)
 #     print(status.decode())
    elif(option == '2'):
      total = clientSocket.recv(2048)
      print("Total:RM " , total.decode('utf-8'))
clientSocket.close()
